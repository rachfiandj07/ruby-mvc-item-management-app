<h1>Create new items</h1>


<form method="POST" action="/items/create">
            <label for="">Nama item</label><br>
            <input type="name" id="name" name="name"><br>

            <label for="">Harga item</label><br>
            <input type="price" id="price" name="price"><br>
            <select
                name="category_id"
                id="category_id"
            >
                <% categories.each do |cat| %>
                <option value="<%= cat.id %>" > <%= cat.name %></option>
                <% end %>
            </select>
            <input type="submit" value="submit">
</form>