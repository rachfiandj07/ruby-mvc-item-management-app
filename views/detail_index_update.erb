<% items.each do |item| %>
<h1>Update item details <%= item.name %></h1>

<form method="POST" action="/items/update/item/<%= item.id %>">

            <label for="">Nama item</label><br>
            <input type="name" id="name" name="name" value="<%= item.name %>"><br>

            <label for="">Harga item</label><br>
            <input type="price" id="price" name="price" value="<%= item.price %>" required=""><br>
            <input type="hidden" id="item_id" name="item_id" value="<%= item.id %>" required=""><br>

            <select
                name="category_id"
                id="category_id"
            >
                <option selected="selected" value="<%= item.category_id %>" > <%= item.category %></option>
                <% categories.each do |cat| %>
                <% if cat.id == item.category_id %>
                <% categories.delete(cat.id == item.category_id )%>
                <% else%>
                <option value="<%= cat.id %>" > <%= cat.name %></option>
                <% end %>
                <% end %>
            </select>
            <input type="submit" value="submit">
</form>
<% end %>